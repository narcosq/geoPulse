# Application Settings
API_INSTANCE_APP_NAME=geo-pulse-service
API_INSTANCE_VERSION=v1.0.0
API_INSTANCE_STAGE=development

# Sentry (Optional)
SENTRY_DSN=

# OpenTelemetry (Optional)
OTLP_ENDPOINT=

# PostgreSQL Database
POSTGRES__DSN=postgresql+asyncpg://geopulse:geopulse_pass@localhost:5432/geopulse
POSTGRES_USER=geopulse
POSTGRES_PASSWORD=geopulse_pass
POSTGRES_DB=geopulse
POSTGRES_PORT=5432

# Redis
REDIS__DSN=redis://localhost:6379/0
REDIS_PORT=6379

# Kafka
KAFKA__BOOTSTRAP_SERVERS=localhost:9092
KAFKA__CONSUMER_GROUP_ID=geopulse-consumer
KAFKA__TOPICS_PREFIX=geopulse
KAFKA_PORT=9092

# Firebase Cloud Messaging
# Option 1: Path to credentials file
FIREBASE__CREDENTIALS_PATH=/path/to/firebase-credentials.json
# Option 2: JSON string (alternative to file path)
# FIREBASE__CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
FIREBASE__PROJECT_ID=your-firebase-project-id

# Google Maps API
GOOGLE_MAPS__API_KEY=your-google-maps-api-key
GOOGLE_MAPS__BASE_URL=https://maps.googleapis.com/maps/api

# Telegram Bot API
TELEGRAM__BOT_TOKEN=your-telegram-bot-token
TELEGRAM__BASE_URL=https://api.telegram.org/bot

# Celery
CELERY__BROKER_URL=redis://localhost:6379/0
CELERY__RESULT_BACKEND=redis://localhost:6379/0
CELERY__TASK_SERIALIZER=json
CELERY__RESULT_SERIALIZER=json
CELERY__ACCEPT_CONTENT=["json"]
CELERY__TIMEZONE=UTC
CELERY__ENABLE_UTC=true

# Logger
LOGGER__LEVEL=INFO
LOGGER__CONFIG_FILE=config/logging.json

# Circuit Breaker
CIRCUIT_BREAKER__MAX_FAILURES=5
CIRCUIT_BREAKER__RESET_TIMEOUT_SECONDS=30.0

# API Port
API_PORT=8000

